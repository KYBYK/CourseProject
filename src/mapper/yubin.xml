<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="yubin">  	
  	<!-- Login 기능 -->
  	<select id="login" parameterType="String" resultType="vo.LoginVO">
  		SELECT log_idx, log_pw, chk_role From login_t WHERE log_id = #{id}
  	</select>
  	
  	<!-- 교수 정보 가져오기 -->
  	<resultMap type="vo.LoginVO" id="professor">
  		<association property="pvo" javaType="vo.ProfessorVO" select="professorInfo" column="p_idx"/>
  	</resultMap>
  	
  	<select id="getProfessor" parameterType="String" resultMap="professor">
  		SELECT * FROM login_t WHERE log_idx = #{log_idx}
  	</select>
  	
  	<select id="professorInfo" parameterType="String" resultType="vo.ProfessorVO">
  		SELECT * FROM professor_t WHERE p_idx = #{p_idx}
  	</select>

	<!-- 학생 정보 가져오기 -->
  	<resultMap type="vo.LoginVO" id="student">
  		<association property="stvo" javaType="vo.StudentVO" select="studentInfo" column="st_idx"/>
  	</resultMap>
  	<select id="getStudent" parameterType="String" resultMap="student">
  		SELECT * FROM login_t WHERE log_idx = #{log_idx}
  	</select>
  	
  	<select id="studentInfo" parameterType="String" resultType="vo.StudentVO">
  		SELECT * FROM student_t WHERE st_idx = #{st_idx}
  	</select>
  	
  </mapper>
  